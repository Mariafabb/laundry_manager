{% extends "base.html.twig" %}

{% block body %}

    <style>
        label {
            font-family: Century, serif; font-size: 25px; color: darkorange; margin: 15px;
        }
        input {
            border-width: 5px; border-color: darkorange; font-size: 25px;
        }
        button{
            align-content: center; font-family: Century, serif; font-size: 25px; background-color: darkorange; color: white; padding-top: 10px; padding-bottom: 10px; padding-right: 50px; padding-left: 50px;
        }
    </style>

    {{ form_start(form) }}

    <div class="form" id="nuovo_utente">
        <h2 style="font-family: Century, serif; font-size: 30px; color: darkorange; margin: 20px">Nuovo Utente</h2><br>

        <div class="input-group gap-3" style="margin-bottom: 20px">
            {{ form_row(form.username) }}
        </div>

        <div class="input-group gap-3" style="margin-left: 5px; margin-bottom: 20px">
            {{ form_row(form.password) }}
        </div>

        <div class="input-group gap-3" style="margin-left: 40px; margin-bottom: 20px">
            {{ form_row(form.nome)}}
        </div>

        <div class="input-group gap-3" style="margin-left: 5px; margin-bottom: 20px">
            {{ form_row(form.cognome)}}
        </div>

        <div class="input-group gap-3" style="margin-left: 50px; margin-bottom: 20px">
            {{ form_row(form.email)}}

        </div>

        <div class="d-flex" style="margin-left: 200px">

            {{ form(form) }}

        </div>

    </div>

    {{ form_end(form) }}


{% endblock %}
