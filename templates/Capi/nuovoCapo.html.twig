{% extends "base.html.twig" %}

{% block body %}
    <style>
    label {
        font-family: Century, serif; font-size: 25px; color: darkorange; margin: 15px;
    }
    input {
        border-width: 5px; border-color: darkorange; font-size: 25px;
    }
    button{
        font-family: Century, serif; text-align: center; font-size: 25px ;color: white; background-color: darkorange; padding: 10px 30px;
    }

    button:hover{
        color: #00aa88; border-width: 7px; border-color: #00aa88; background-color: white
    }
</style>

{{ form_start(form) }}

    <div class="form" id="nuovo_capo">
    <h2 style="font-family: Century, serif; font-size: 30px; color: darkorange; margin: 20px">Nuovo Capo</h2><br>

    <div class="input-group gap-3" style="margin-left: 115px; margin-bottom: 20px">
        {{ form_row(form.Tipo) }}
    </div>

    <div class="input-group gap-3" style="margin-left: 70px; margin-bottom: 20px">
        {{ form_row(form.sottotipo) }}
    </div>

    <div class="input-group gap-3" style="margin-left: 40px; margin-bottom: 20px">
        {{ form_row(form.descrizione)}}
    </div>

    <div class="input-group gap-3" style="margin-left: 90px; margin-bottom: 20px">
        {{ form_row(form.prezzo)}}
    </div>

    <div class="input-group gap-3" style="margin-bottom: 50px">
        {{ form_row(form.giorni_lavorazione)}}
    </div>

    <div class="d-flex" style="margin-left: 250px">

        {{ form_row(form.salva)}}

    </div>

{{ form_end(form) }}

{% endblock %}