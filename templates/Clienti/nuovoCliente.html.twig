{% extends "base.html.twig" %}

{% block body %}
<style>
    label {
        font-family: Century, serif; font-size: 25px; color: darkorange; margin: 15px;
    }
    input {
        border-width: 5px; border-color: darkorange; font-size: 25px;
    }
    button{
        font-family: Century, serif; text-align: center; font-size: 25px ;color: white; background-color: darkorange; padding: 10px 30px;
    }

    button:hover{
        color: #00aa88; border-width: 7px; border-color: #00aa88; background-color: white
    }
</style>

        {{ form_start(form) }}

<div class="form" id="nuovo_cliente">
    <h2 style="font-family: Century, serif; font-size: 30px; color: darkorange; margin: 20px">Nuovo Cliente</h2><br>

        <div class="input-group gap-3" style="margin-left: 65px; margin-bottom: 20px">
            {{ form_row(form.nome) }}
            {{ form_row(form.cognome)}}
        </div>

        <div class="input-group gap-3" style="margin-left: 40px; margin-bottom: 20px">
            {{ form_row(form.indirizzo) }}
            {{ form_row(form.cap)}}
            {{ form_row(form.comune)}}
        </div>

        <div class="input-group gap-3" style="margin-left: 35px; margin-bottom: 20px">
            {{ form_row(form.provincia)}}
            {{ form_row(form.stato)}}
        </div>

        <div class="input-group gap-3" style="margin-left: 45px; margin-bottom: 20px">
            {{ form_row(form.telefono)}}
            {{ form_row(form.cellulare)}}
            {{ form_row(form.email)}}
        </div>

        <div class="input-group gap-3" style="margin-left: 10px; margin-bottom: 20px">
            {{ form_row(form.codice_fiscale)}}
            {{ form_row(form.p_iva)}}
        </div>

        <div class="input-group gap-3">
            {{ form_row(form.codice_univoco)}}
            {{ form_row(form.pec)}}
        </div>

        <div class="d-flex" style="margin-left: 400px; margin-top: 50px">

             {{ form(form) }}

        </div>

</div>

        {{ form_end(form) }}

{% endblock %}