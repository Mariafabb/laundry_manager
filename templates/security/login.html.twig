{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
    <style> .testo{
            font-family: Century, serif; color: white; font-size: 20px}

    </style>
<table style="height:100%;  width:100%">
    <tbody>
    <tr>
    <td class="align-middle">
       <div class="row d-flex justify-content-center">
        <div class="col-md-8 col-lg-6 col-sm-6 col-xl-4">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                 {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                     </div>
                {% endif %}
                    <div id="login-box" class="col-12" style="background-color: #00aa88">
                         <br>
                         <form id="login-form" class="form" action="" method="post">
                             <h3 class="text-center" style="font-family: Century; color: white; font-size: 40px">LOGIN</h3>
                         <br>
                             <div class="form-group testo">
                                <label for="username">USERNAME:</label><br>
                                 <input type="text" name="username" id="username" class="form-control p-4">
                             </div>
                             <div class="form-group testo">
                                 <label for="password">PASSWORD:</label><br>
                                 <input type="text" name="password" id="password" class="form-control p-4">
                             </div>
                         <br>
                             <div class="form-group testo">
                                  <label for="remember-me"><span>RICORDAMI</span>
                                  <input id="remember-me" name="remember-me" type="checkbox"></label>
                             </div>
                             <div class="form-group text-center">
                                  <input type="submit" name="submit" class="btn pr-5 pl-5 p-3" style="background-color: white; font-family: Century; color: #00aa88; font-size: 20px; font-weight: bold;" value="ACCEDI">
                             </div>
                         <br>
                             {% if csrf_token('authenticate') %}
                                 <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                             {% endif %}
                         </form>
                    </div>
            </form>
        </div>
       </div>
    </td>
    </tr>
    </tbody>
</table>
{% endblock %}
