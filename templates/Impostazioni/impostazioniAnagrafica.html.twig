{% extends 'base.html.twig' %}

{% block body %}
    <style>
        label {
            font-family: Century, serif; font-size: 25px; color: darkorange; margin: 15px;
        }
        input {
            border-width: 5px; border-color: darkorange; font-size: 25px;
        }
        button{
            font-family: Century, serif; text-align: center; font-size: 25px ;color: white; background-color: darkorange; padding: 10px 30px;
        }

        button:hover{
            color: #00aa88; border-width: 7px; border-color: #00aa88; background-color: white
        }
    </style>

    {{ form_start(form) }}

    <div class="form" id="nuovo_capo">
    <h2 style="font-family: Century, serif; font-size: 30px; color: darkorange; margin: 20px">Anagrafica Aziendale </h2><br>

    <div class="input-group gap-3" style="margin-bottom: 20px">
        {{ form_row(form.ragione_sociale) }}
    </div>

    <div class="input-group gap-3" style="margin-left: 70px; margin-bottom: 20px">
        {{ form_row(form.indirizzo) }}
        {{ form_row(form.cap) }}
    </div>

    <div class="input-group gap-3" style="margin-left: 75px; margin-bottom: 20px">
        {{ form_row(form.comune)}}
        {{ form_row(form.provincia)}}
    </div>

    <div class="input-group gap-3" style="margin-left: 70px; margin-bottom: 20px">
        {{ form_row(form.telefono)}}
        {{ form_row(form.e_mail)}}
    </div>

    <div class="input-group gap-3" style="margin-left: 110px ; margin-bottom: 50px">
        {{ form_row(form.p_iva)}}
    </div>

    <div class="d-flex" style="margin-left: 400px">

        {{ form_row(form.salva)}}

    </div>

    {{ form_end(form) }}

{% endblock %}